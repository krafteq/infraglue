{
  "name": "@krafteq/infraglue",
  "version": "0.2.0",
  "description": "Tool to manage monorepo IaaC",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "ig": "bin/ig.js"
  },
  "files": [
    "bin",
    "dist",
    "skill"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "start": "node dist/index.js",
    "show": "tsx ./src/index.ts show ../../examples/terraform_and_pulumi/ --json",
    "apply": "cross-env PULUMI_CONFIG_PASSPHRASE='' tsx ./src/index.ts apply ../../examples/terraform_and_pulumi/",
    "destroy": "cross-env PULUMI_CONFIG_PASSPHRASE='' tsx ./src/index.ts destroy ../../examples/terraform_and_pulumi/",
    "ts:check": "tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "cli",
    "iac",
    "tools",
    "infraglue"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ci-info": "^4.1.0",
    "commander": "^14.0.0",
    "picocolors": "^1.1.1",
    "yaml": "^2.8.1",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "cross-env": "^7.0.3",
    "tsup": "^8.5.1",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "publishConfig": {
    "main": "dist/index.js"
  }
}
