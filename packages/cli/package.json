{
  "name": "@krafteq/infraglue",
  "version": "LOCAL",
  "description": "Tool to manage monorepo IaaC",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "ig": "bin/ig.js"
  },
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "start": "node dist/index.js",
    "show": "tsx ./src/index.ts show ../../examples/terraform_and_pulumi/ --json",
    "interactive-apply": "cross-env PULUMI_CONFIG_PASSPHRASE='' tsx ./src/index.ts interactive-apply ../../examples/terraform_and_pulumi/",
    "interactive-destroy": "cross-env PULUMI_CONFIG_PASSPHRASE='' tsx ./src/index.ts interactive-destroy ../../examples/terraform_and_pulumi/",
    "ts:check": "tsc --noEmit",
    "prepare": "npm run build"
  },
  "keywords": [
    "cli",
    "iac",
    "tools",
    "infraglue"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "commander": "^14.0.0",
    "tsx": "^4.20.3",
    "yaml": "^2.8.0",
    "glob": "^11.0.3"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "cross-env": "^7.0.3",
    "jest": "^30.0.4",
    "ts-jest": "^29.4.0",
    "@types/jest": "^30.0.0"
  },
  "publishConfig": {
    "main": "dist/index.js"
  }
}
